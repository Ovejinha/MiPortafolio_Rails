<h1>Contact#index</h1>
<p>Find me in app/views/contact/index.html.erb</p>

<div class="container">
  <h2>Contacto</h2>
  <%= form_with url: "/contact", method: :post do |form| %>
    <div class="form-group">
      <%= form.label :name, class: "text-black" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email, class: "text-black" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :message, class: "text-black" %>
      <%= form.text_area :message, class: "form-control" %>
    </div>
    <%= form.submit "Enviar", class: "btn btn-warning" %>
  <% end %>
</div>
