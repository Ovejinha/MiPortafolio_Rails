
<div class="container text-center mt-4 mb-4">
  <h2>Contactanos</h2>
</div>

<div class="container">
  <%= form_with url: "/contact", method: :post do |form| %>
    <div class="form-group">
      <%= form.label :Nombre, class: "text-black" %>
      <%= form.text_field :Nombre, class: "form-control" %>
    </div>
    <div class="form-group mt-5">
      <%= form.label :email, class: "text-black" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group mt-5 mb-5">
      <%= form.label :Comentarios, class: "text-black" %>
      <%= form.text_area :Comentarios, class: "form-control" %>
    </div>
    <div class= "mb-5">
    <%= form.submit "Enviar", class: "btn btn-warning" %>
    </div>

  <% end %>
</div>
